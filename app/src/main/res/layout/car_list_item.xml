<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vehicle_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:background="@color/light"
            android:contentDescription="@string/cars"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/vehicle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vehicle_image"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            android:text="@string/short_description_of_the_car"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffff00"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/vehicle_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicle_title"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_speed"
            android:padding="10dp"
            android:text="@string/fast_acceleration_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="?android:textColorSecondary"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />
        <!--Add an Horizontal line-->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/vehicle_speed"
            android:background="@color/light" />

        <TextView
            android:id="@+id/vehicle_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginTop="3dp"
            android:padding="8dp"
            android:text="@string/vehicle_short_description"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/dark"
            android:textStyle="italic"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>