<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/belowLayout"
        android:background="#101955"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ellipse_7_138dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-20dp"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_ellipse_6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ellipse_6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="-20dp"
            android:layout_marginTop="170dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
        <TextView
            android:id="@+id/bid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Bidding"
            android:textColor="@android:color/white"
            android:fontFamily="@font/quicksand"
            android:textSize="25sp"
            android:textStyle="bold"
            />


        <TableLayout
            android:id="@+id/bid_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_below="@id/bid_title"
            android:layout_marginBottom="25dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end"
                    android:text="Amount: "
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/bid_amount"
                    android:hint="Enter bidding amount"
                    android:inputType="number"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textColorHint="@android:color/white" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end"
                    android:text="From : "
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/from_destination"
                    android:hint="Enter point of departure"
                    android:inputType="textPassword"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textColorHint="@android:color/white"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end"
                    android:text="To : "
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/to_location"
                    android:hint="Enter destination"
                    android:inputType="text"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textColorHint="@android:color/white"
                    />

            </TableRow>
        </TableLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/bid_table"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:id="@+id/button_cancel_user_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginRight="10dp"/>


                <Button
                    android:id="@+id/button_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bid"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:background="@drawable/rounded_btn"
                    />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>