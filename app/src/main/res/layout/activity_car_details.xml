<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarDetailsActivity"
    android:padding="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:src="@drawable/mycar"
        />

    <TextView
        android:id="@+id/car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Car Name"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:text="VW"
        android:fontFamily="@font/quicksand"
        android:layout_below="@id/car_image"
        />

    <LinearLayout
        android:id="@+id/owner_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_name"
        android:layout_marginTop="2dp"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:paddingTop="8dp"
                android:paddingBottom="5dp"
                android:text="owners name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/owner_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:paddingBottom="5dp"
                android:text="0700000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/default_dp"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/owner_info"
        >
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/quicksand"
        android:paddingLeft="8dp"
        />
    <TextView
        android:id="@+id/car_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="here is the description of the car! The VW is a great car blah! blah! blah!"
        android:layout_below="@id/description"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/description_layout"
        android:paddingTop="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="price per day"
                android:textSize="20sp"
                android:text="Kshs 5,000"
                android:paddingLeft="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="per day"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:saveEnabled="true"
            android:numStars="5"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:theme="@style/RatingBar"
            android:paddingLeft="8dp"
            />

        </LinearLayout>
    <Button
        android:id="@+id/make_call"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:gravity="center"
        android:text="Call"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:paddingRight="30dp"
        android:paddingLeft="50dp"
        android:background="@drawable/rounded_corner_call"
        android:layout_below="@id/price"
         />
    <Button
        android:id="@+id/rent_car"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:textStyle="bold"
        android:text="Rent"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_corners"
        android:layout_below="@id/price"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>